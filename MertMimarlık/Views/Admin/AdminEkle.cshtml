@model Admin
<link rel="stylesheet" href="~/css/adminforms.css"/>
<div style="text-align:center;" >  
<section class="iletisimForms">
        <form asp-action="AdminEkle" method="post">
            <h2>ADMİN EKLE</h2>
            <label asp-for="username">username giriniz (*)<span>&nbsp;</span></label>
            <input asp-for="username" placeholder="Kullanıcı adı giriniz." />
            <span asp-validation-for="username" class="text-danger"></span>
    
          
    
         <label asp-for="password">Şifre (*) <span>&nbsp;</span></label>
            <input type="password" asp-for="password" placeholder="Şifre giriniz." />
            <span asp-validation-for="password" class="text-danger"></span>
    
    
    
            <label asp-for="confirmpassword">Şifre TEKRAR (*) <span>&nbsp;</span></label>
            <input type="password" asp-for="confirmpassword" placeholder="Şifreyi tekrar giriniz" />
            <span asp-validation-for="confirmpassword" class="text-danger"></span>
    
    
         
            <br />
            <button  type="submit" >
                <div class="svg-wrapper-1">
                    <div class="svg-wrapper">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            width="24"
                            height="24"
                        >
                            <path fill="none" d="M0 0h24v24H0z"></path>
                            <path
                                fill="currentColor"
                                d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"
                            ></path>
                        </svg>
                    </div>
                </div>
                <span>Kaydet</span>
             
            </button>
        </form>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <h3  style= "color: rgb(55, 55, 131);padding-left:10px;">@TempData["SuccessMessage"]</h3>
                
            </div>
        }
    </section>
    </div>
    
    





    



